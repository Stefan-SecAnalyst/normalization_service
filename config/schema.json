{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Normalization Rules Schema",
  "type": "object",
  "properties": {
    "fields": {
      "type": "object",
      "properties": {
        "timestamp": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "input_format": { "type": "string" },
            "output_format": { "type": "string" }
          },
          "required": ["type", "input_format"]
        },
        "system": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "transform": { "type": "string" }
          },
          "required": ["type"]
        },
        "level": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "allowed_values": {
              "type": "array",
              "items": { "type": "string" }
            },
            "transform": { "type": "string" }
          },
          "required": ["type", "allowed_values"]
        },
        "code": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "min_value": { "type": "integer" },
            "max_value": { "type": "integer" }
          },
          "required": ["type"]
        },
        "message": {
          "type": "object",
          "properties": {
            "type": { "type": "string" },
            "mask_keywords": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["type"]
        }
      },
      "required": ["timestamp", "system", "level", "code", "message"]
    }
  },
  "required": ["fields"]
}
